pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pawansharma8010/hello-world-ui'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                bat 'ng build'
            }
        }
        stage('Deploy') {
            steps {
                bat '''
                docker build -t angular-app:latest .
                docker run -d -p 80:80 --name angular-app angular-app:latest
                '''
            }
        }
    }
}
